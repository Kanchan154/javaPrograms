import java.uil.Scanner;
class A{
int a,b;
void input(){
    Scanner sc=new Scanner(System.in);
    System.out.println("enter the value");
    a=sc.nextInt();
    System.out.println("enter the value");
    b=sc.nextInt();
}
    void add(){
        System.out.println("addition is "+(a+b));
}
}
class B extends A{
    int C;
    void getdata(){
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the value");
        c=sc.nextInt();
    }
void display(){
    System.out.println("addition is "+(a+b+c));
}
}
public class C{
    public static void main(Strings[]args){
    B bb=new B();
    bb.input();
    bb.getdata();
    bb.display();
}
}
